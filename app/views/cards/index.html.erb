<h1>Listing cards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Acceptance description</th>
      <th>Priority order</th>
      <th>Parent</th>
      <th>Status</th>
      <th>Type</th>
      <th>Importance</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.description %></td>
        <td><%= card.acceptance_description %></td>
        <td><%= card.priority_order %></td>
        <td><%= card.parent %></td>
        <td><%= card.status %></td>
        <td><%= card.type %></td>
        <td><%= card.importance %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

